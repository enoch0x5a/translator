<!DOCTYPE html>
<html>
<head>
  <title>Translator</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, msg| %>
    <%= msg %>
    <br/>
<% end %>
<% if current_user %>
    Welcome, <%= current_user.name %>
    <%= link_to 'log out', logout_path %>
<% end %>

<%= yield %>

</body>
</html>
